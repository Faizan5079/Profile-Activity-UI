<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <!-- Back Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back_xml"
                android:contentDescription="Back"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="8dp"
                app:tint="@color/white" />

            <!-- Profile Title -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Profile"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginTop="3dp"/>

            <!-- Support Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_support"
                android:contentDescription="Support"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                app:tint="@color/white" />
        </LinearLayout>

        <!-- Profile Picture -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_user"
            android:background="@drawable/circle_bg"
            android:padding="8dp"
            android:layout_marginTop="8dp" />

        <!-- User Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Faizan Ali"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <!-- Member Since -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Member since May, 2025"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="4dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#1A1A1A"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical"
            android:radius="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_car"
                android:layout_marginEnd="12dp"
                android:contentDescription="Car Icon"
                app:tint="#FFFFFF" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="get to know your vehicles, inside out"
                    android:textColor="#CCCCCC"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CRED garage        ⟶"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Credit Score Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#1A1A1A"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:backgroundTintMode="src_in">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_credit"
                android:contentDescription="Credit Score"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="credit score • REFRESH AVAILABLE"
                android:textColor="#00FF88"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="507"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right_alt"
                android:layout_marginStart="8dp"
                android:contentDescription="Arrow"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <!-- Cashback Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#1A1A1A"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_cash"
                android:contentDescription="Lifetime Cashback"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="lifetime cashback"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹57"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right_alt"
                android:layout_marginStart="8dp"
                android:contentDescription="Arrow"
                app:tint="#FFFFFF" />

        </LinearLayout>

        <!-- Bank Balance Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#1A1A1A"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_bank"
                android:contentDescription="Bank Balance"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="bank balance"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginStart="12dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="check"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right_alt"
                android:layout_marginStart="8dp"
                android:contentDescription="Arrow"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <!-- Rewards & Benefits Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YOUR REWARDS &amp; BENEFITS"
            android:textColor="#888888"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />

        <!-- Cashback Balance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#1A1A1A"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="cashback balance"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹1000"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right"
                android:layout_marginStart="8dp"
                android:contentDescription="Arrow"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <!-- Coins Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#1A1A1A"
            android:padding="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="coins"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31,57,461"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right"
                android:layout_marginStart="8dp"
                android:contentDescription="Arrow"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <!-- Refer & Earn Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#1A1A1A"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="win upto Rs 1000"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="refer and earn"
                android:textColor="#AAAAAA"
                android:textSize="12sp" />
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right"
                android:layout_marginStart="8dp"
                android:contentDescription="Arrow"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <!-- Transactions & Support Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TRANSACTIONS &amp; SUPPORT"
            android:textColor="#888888"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="8dp" />

        <!-- All Transactions Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#1A1A1A"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="all transactions"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_weight="1" />

            <!-- Optional Arrow or Icon -->
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="Arrow"
                app:tint="#FFFFFF" />
        </LinearLayout>




    </LinearLayout>
</ScrollView>